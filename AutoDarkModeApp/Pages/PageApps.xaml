<Page x:Class="AutoDarkModeApp.PageApps"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoDarkModeApp"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      xmlns:p="clr-namespace:AutoDarkModeApp.Properties"
      mc:Ignorable="d"
      Title="PageApps" Height="560" Width="450" Foreground="{DynamicResource SystemBaseHighColorBrush}" fw:PointerTracker.Enabled="True" VerticalAlignment="Top" HorizontalAlignment="Left">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock HorizontalAlignment="Left" Margin="10,4,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.NavbarApps}" FontSize="25" FontWeight="Bold" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />

        <!-- Apps -->
        <TextBlock HorizontalAlignment="Left" Margin="50,58,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.lblAppsTitle}" VerticalAlignment="Top" Height="16" Width="Auto" Grid.Column="1" Grid.Row="1" />
        <TextBlock Text="&#xE71D;" HorizontalAlignment="Left" Margin="11,80,0,0" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" FontSize="25" Height="25" Width="25" Grid.Column="1" Grid.Row="1" />
        <ComboBox HorizontalAlignment="Left" Margin="49,79,0,0" VerticalAlignment="Top" Width="200" Name ="AppComboBox" ToolTipService.ShowOnDisabled="True" ToolTipService.InitialShowDelay="3" ToolTipService.HasDropShadow="True" Grid.Column="1" Grid.Row="1"  DropDownClosed="AppComboBox_DropDownClosed" Height="28" Style="{StaticResource ComboBoxRevealStyle}" BorderThickness="1">
            <ComboBoxItem IsSelected="True" x:Name="SystemInterface" Content="{x:Static p:Resources.lblSystem}" />
            <ComboBoxItem IsSelected="False" x:Name="SystemApps" Content="{x:Static p:Resources.lblApps}" />
            <ComboBoxItem IsSelected="False" x:Name="MicrosoftOffice" Content="Microsoft Office" />
            <ComboBoxItem IsSelected="False" x:Name="Edge" Content="{x:Static p:Resources.lblEdge}" />
        </ComboBox>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1" Margin="50,118,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <CheckBox x:Name="AppEnableTheming" Content="{x:Static p:Resources.lblEnableTheming}" Foreground="{DynamicResource SystemBaseHighColorBrush}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" ToolTipService.ShowOnDisabled="true" ToolTipService.InitialShowDelay="3" ToolTipService.HasDropShadow="True" Height="Auto" Width="Auto" Click="AppCheckbox_Clicked"/>
            <RadioButton HorizontalAlignment="Left" x:Name="AdaptiveRadio" Margin="0,15,0,0" Content="{x:Static p:Resources.lblAdaptive}" Foreground="{DynamicResource SystemBaseHighColorBrush}"  VerticalAlignment="Top" Height="16" Width="Auto" IsChecked="True" Click="AppRadio_Clicked"/>
            <TextBlock HorizontalAlignment="Left" Margin="19,0,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.lblAdaptiveExplanation}" VerticalAlignment="Top" Height="16" Width="Auto" Foreground="Gray"/>
            <RadioButton HorizontalAlignment="Left" x:Name="LightRadio" Margin="0,15,0,0" Content="{x:Static p:Resources.lblLight}" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalAlignment="Top" Height="16" Width="Auto" Click="AppRadio_Clicked"/>
            <TextBlock HorizontalAlignment="Left" Margin="19,0,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.lblLightExplanation}" VerticalAlignment="Top" Height="16" Width="Auto" Foreground="Gray"/>
            <RadioButton HorizontalAlignment="Left" x:Name="DarkRadio" Margin="0,15,0,0" Content="{x:Static p:Resources.lblDark}" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalAlignment="Top" Height="16" Width="Auto" Click="AppRadio_Clicked"/>
            <TextBlock HorizontalAlignment="Left" Margin="19,0,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.lblDarkExplanation}" VerticalAlignment="Top" Height="16" Width="Auto" Foreground="Gray"/>
        </StackPanel>

        <TextBlock Text="{x:Static p:Resources.lblExtraOptions}" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"  Margin="11,285,0,0" FontSize="14" FontWeight="Bold"/>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1" Margin="11,320,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <CheckBox x:Name="AccentColorCheckBox" Content="{x:Static p:Resources.cmbAccentColor}" Foreground="{DynamicResource SystemBaseHighColorBrush}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" ToolTipService.ShowOnDisabled="true" ToolTipService.InitialShowDelay="3" ToolTipService.HasDropShadow="True" Height="Auto" Width="Auto" Click="AccentColorCheckBox_Click"/>
            <CheckBox x:Name="CheckBoxOfficeWhiteTheme" Content="{x:Static p:Resources.cbOfficeWhiteTheme}" Foreground="{DynamicResource SystemBaseHighColorBrush}" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" ToolTip="{x:Static p:Resources.ToolTipDisabledDueOfficeDisabled}" ToolTipService.ShowOnDisabled="true" ToolTipService.InitialShowDelay="3" ToolTipService.HasDropShadow="True" Height="Auto" Width="Auto" Click="CheckBoxOfficeWhiteTheme_Click"/>
        </StackPanel>


        <!-- Dark Reader -->
        <TextBlock Text="{x:Static p:Resources.tbAppsTitleRecommendedTools}" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"  Margin="11,385,0,0" FontSize="14" FontWeight="Bold"/>
        <TextBlock Text="&#xEA86;" Grid.Column="1" Grid.Row="1"  Margin="11,425,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" FontFamily="Segoe MDL2 Assets"/>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1" Margin="51,420,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Dark Reader" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0"/>
            <TextBlock Text="{x:Static p:Resources.tbDarkReaderDescription}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,2,0,0" TextWrapping="Wrap" Width="300" Foreground="Gray"/>
            <Button Name="ButtonWikiBrowserExtension" Content="{x:Static p:Resources.buttonDownloadExtension}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,6,0,0" Height="28" MinWidth="200" Width="Auto" Click="ButtonWikiBrowserExtension_Click" />
        </StackPanel>
    </Grid>
</Page>
